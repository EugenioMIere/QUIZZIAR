<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" type="text/css" href="/public/css/preguntas.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/public/js/timer.js"> </script>
    <title> Partida </title>
</head>
<body>

    <div class="countdown mt-4" id="timer">20</div>

{{#error}}
    <div class="w3-panel w3-pale-red w3-border">
        <p> {{error}} </p>
    </div>
{{/error}}

{{#mensaje}}
    <div class="w3-panel w3-pale-green w3-border">
        <p> {{mensaje}} </p>
    </div>
{{/mensaje}}

<div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
    <h2>Pregunta: {{#preguntas}} {{ pregunta }} {{/preguntas}}<!--{{nivel}}--></h2>
    {{#opciones}}
        <form action="/pregunta/validarPregunta&idPregunta={{pregunta_id}}" method="post">
            <p><button id="respuesta" name="respuesta" value="{{id}}" {{estadoBoton}}>{{ respuesta }}</button></p>
        </form>
    {{/opciones}}
    <p class="respuesta {{claseRespuesta}}">Respuesta: {{result}}</p>
    <a href="/pregunta/getPregunta" {{visivilidad}}>Siguiente</a>
</div>

<div class="buttons">
    <form action="/pregunta/reportarPregunta" method="POST">
        {{#preguntas}}
            <label for="questionId">
                <input hidden value={{pregunta_id}} id="questionId" name="questionId">
            </label>
        {{/preguntas}}
        <button class="reportar-btn" type="submit"> Reportar pregunta </button>
    </form>
</div>

</body>
</html>



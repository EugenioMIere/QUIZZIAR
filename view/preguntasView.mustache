<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" type="text/css" href="/public/css/preguntas.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/public/js/timer.js"> </script>
    <style>
        .categoria-1 { background-color: #F2293A; } /* Color para Arte */
        .categoria-2 { background-color: #21BF58; } /* Color para Ciencia */
        .categoria-3 { background-color: #F28705; } /* Color para Deportes */
        .categoria-4 { background-color: #F252BA; } /* Color para Entretenimiento */
        .categoria-5 { background-color: #1575CF; } /* Color para Geografía */
        .categoria-6 { background-color: #F8DE41; } /* Color para Historia */
        /* Añadir más estilos según sea necesario */
    </style>
    <title> Partida </title>
</head>
<body>

<div class="w3-container w3-content w3-center w3-margin-top w3-teal">
    <div class="w3-card-4 custom-card">
        {{#preguntas}}
            <input type="hidden" id="contadorInicial" value="{{ tiempoRestante }}" >
            <input type="hidden" id="idPregunta" value="{{ pregunta }}" >
        <div class="countdown w3-xxlarge" id="timer">{{ tiempoRestante }}</div>
        {{/preguntas}}
    </div>
</div>


{{#error}}
    <div class="w3-panel w3-pale-red w3-border">
        <p> {{error}} </p>
    </div>
{{/error}}

{{#mensaje}}
    <div class="w3-panel w3-pale-green w3-border">
        <p> {{mensaje}} </p>
    </div>
{{/mensaje}}

<div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
    <h2 class="categoria-{{categoria}}">Pregunta: {{#preguntas}} {{ pregunta }} {{/preguntas}}<!--{{nivel}}--></h2>
    {{#opciones}}
        <form action="/pregunta/validarPregunta&idPregunta={{pregunta_id}}" method="post">
            <p><button id="respuesta" name="respuesta" value="{{id}}" {{estadoBoton}}>{{ respuesta }}</button></p>
        </form>
    {{/opciones}}
    <p class="respuesta {{claseRespuesta}}">Respuesta: {{result}}</p>
    <a href="/pregunta/getPregunta" {{visivilidad}} style="color:black  ">Siguiente</a>
</div>

<div class="buttons">
    <form action="/pregunta/reportarPregunta" method="POST">
        {{#preguntas}}
            <label for="questionId">
                <input hidden value={{id}} id="questionId" name="questionId">
            </label>
        {{/preguntas}}
        <button class="reportar-btn" type="submit"> Reportar pregunta </button>
    </form>
</div>

</body>
</html>



<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://kit.fontawesome.com/65c8bcbd9c.js" crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/public/css/admin.css">
    <title> Administrador </title>

    <script>
        function enviarFormulario() {
            var formulario = document.getElementById('formulario');
            var opcionSeleccionada = document.getElementById('opcion').value;
            formulario.action = '/admin/' + encodeURIComponent(opcionSeleccionada);
            formulario.submit();
        }
    </script>
</head>
<body>
<div class="container mt-5">

    <div class="card mb-3 mx-auto" style="max-width: 60%;">
        <div class="row g-0">
            <div class="col-md-12">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Filtrado</h5>
                    <form id="formulario" action="/admin/" method="post" class="text-center">

                        <label for="opcion">Opción:</label>

                        <select name="opcion" id="opcion" class="form-select mb-3">
                            <option value="getCantidadPartidasJugadas">Cantidad de partidas jugadas</option>
                            <option value="getCantidadPreguntas">Cantidad de preguntas en el juego</option>
                            <option value="getCantidadSugeridas">Cantidad de preguntas sugeridas</option>
                            <option value="getCantidadDeUsuarios">Cantidad de usuarios nuevos</option>
                            <option value="getPorcentajeCorrectasPorUsuario">respuestas correctas por usuario</option>
                            <option value="getCantidadDeUsuariosPorPais">Cantidad de usuarios por país</option>
                            <option value="getCantidadDeUsuariosPorGenero">Cantidad de usuarios por sexo</option>
                            <option value="getCantidadDeUsuariosPorGrupoDeEdad">Cantidad de usuarios por grupo de edad</option>
                        </select>

                        <label for="fechaDesde">Desde:</label>
                        <input type="date" id="fechaDesde" name="fechaDesde" required class="form-control mb-3">

                        <label for="fechaHasta">Hasta:</label>
                        <input type="date" id="fechaHasta" name="fechaHasta" required class="form-control mb-3">

                        <button type="button" onclick="enviarFormulario()" class="btn btn-primary">Filtrar</button>
                    </form>

                </div>

            </div>
        </div>
    </div>

    <br>

    <div class="graficos d-flex align-items-center justify-content-center" >
        <img src="/{{resultado}}" alt="grafico" {{vista}} width="63%">
    </div>

    <div class="container mt-5 ">
        <form action="/admin/generarPDF" method="post">
            <input type="hidden" name="image_name" value="{{resultado}}">

            <div class="d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">Generar PDF</button>
            </div>

        </form>
    </div>


</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

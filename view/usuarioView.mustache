<!-- LOBBY -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> Lobby </title>
    <link rel="stylesheet" type="text/css" href="resources/css/usuarioViewStyles.css">
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction:column;
        justify-content: center;
        align-items: center;
        height: 100%;
        width: 100%;
        background-color: #f0f0f0;
    }

    .event-button-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom:1%;
    }

    .event-button {
        position: relative;
        width: 1000px;
        height: 200px;
        overflow: hidden;
        cursor: pointer;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-size: cover;
        background-position: center;
        animation: slide 10s infinite alternate;
    }

    .event-title {
        text-align: center;
        bottom: 10px;
        left: 10px;
        z-index: 2;
        color: white;
        font-size: 20px;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
</style>
<body>
<div class="event-button-container">
    <div class="event-button" id="nuevaPartida" style="background-image: url('./nuevapartida.png')" action="user/redirigirNuevaPartida">
        <div class="event-title"><a href="/user/redirigirNuevaPartida">NUEVA PARTIDA</a></div>
    </div>
    <div class="event-button" id="verRanking" style="background-image: url('verranking.png')" action="user/redirigirRanking">
        <div class="event-title"><a href="/user/redirigirRanking">VER RANKING</a> </div>
    </div>
    <div class="event-button" id="misPartidas" style="background-image: url('mispartidas.png')">
        <div class="event-title"><a href="/user/redirigirDatosUsuario">MIS PARTIDAS</a> </div>
    </div>
</div>
<script>
    function redirigir(url) {
        window.location.href = url;
    }
</script>
</body>
</html>

<h1>Listado de Preguntas</h1>

<div class="alert alert-danger" role="alert">
    {{#error}}
        <p> {{error}} </p>
    {{/error}}
</div>

<div class="container">
    <table>
        <thead>
        <tr>
            <th> Preguntas </th>
            <th> CategorÃ­a </th>
            <th> Editar </th>
            <th> Eliminar </th>
        </tr>
        </thead>
        <tbody>
        {{#preguntas}}
        <tr>
                <td> {{pregunta}} </td>
                <td> {{categoria}}</td>
                <td>
                    <form action="/editor/editarPregunta" method="POST">
                        <input type="hidden" name="idPreguntaAEditar" value="{{id}}">
                        <button type="submit"><i class="fa-solid fa-pen-to-square"></i></button>
                    </form>
                </td>
                <td>
                    <form action="/editor/eliminarPregunta" method="POST">
                        <input type="hidden" name="idPreguntaAEliminar" value="{{id}}">
                        <button type="submit"><i class="fa-solid fa-trash"></i></button>
                    </form>
                </td>
        </tr>
        {{/preguntas}}
        </tbody>
    </table>
</div>
